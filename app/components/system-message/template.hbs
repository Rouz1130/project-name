{{#if (or
    (and
        errors
        (or (eq type 'warning') (eq type 'errors')))
    (or
        (and (eq type 'success') success))
        (eq type 'info')
)}}
    <div class="system-message alert alert-{{class}}">
        <div class="system-message__glyphicon-holder">
            <span class="glyphicon glyphicon-{{icon}}" aria-hidden="true"></span>
        </div>
        <div class="system-message__message-holder">
            <p>{{message}}</p>
            {{#if errors}}
                Additionally, the server responded with the following errors:
                <ul>
                    {{#each errors as |error|}}
                        <li>{{error}}</li>
                    {{/each}}
                </ul>
            {{/if}}
        </div>
    </div>
{{/if}}
